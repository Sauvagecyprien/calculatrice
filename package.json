{
  "name": "fiche-kilometrique",
  "version": "1.0.0",
  "description": "calculatrice maison",
  "main": "main.js",
  "build": {
    "appID": "calculatrice",
    "productName": "calculatrice",
    "icon": "/assets/images/calculator2.png"
